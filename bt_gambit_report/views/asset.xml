<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="bt_account_invoice_assets" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/bt_gambit_report/static/src/css/invoice_styles.css" rel="stylesheet"/>
        </xpath>
    </template>
    <template id="font_assets_backend" name="font assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/bt_gambit_report/static/src/css/font_style.css"/>
           
        </xpath>
    </template>
    <template id="invoice_report_assets_pdf" inherit_id="web.report_assets_pdf">
        <xpath expr="link[last()]" position="after">
             <link rel="stylesheet" href="/bt_gambit_report/static/src/css/font_style.css"/>
        </xpath>
    </template>

</odoo>