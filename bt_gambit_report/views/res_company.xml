<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record model="ir.ui.view" id="view_company_form_bank_details">
        <field name="name">bank.details.res.company.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//form/sheet/notebook/page/group/group[2]" position="after">
        		<group>
        			<field name="acc_name"/>
        			<field name="acc_no"/>
        			<field name="bank_name"/>
        			<field name="branch_name"/>
        			<field name="iban_no"/>
                    <field name="contact_person"/>

        		</group>
			</xpath>
		</field>
	</record>
</odoo>